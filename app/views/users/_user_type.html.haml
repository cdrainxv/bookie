- if users.exists?
  .section
    %h1.title.is-4= label
    .friends
      - users.each do |user|
        .friend.has-text-centered
          = link_to profile_avatar_select(user.profile), profile_path(user.user_name)
          = link_to user.user_name, profile_path(user.user_name), class: 'button is-small is-size-6 has-text-white is-info'
          - if label == 'Unmet Friends'
            = button_to 'Request', user_request_friend_path(current_user.id, user.id), method: :post, class: 'button is-primary'
          - if label == 'Requested Friends'
            = button_to 'Accept', user_add_friend_path(current_user.id, user.id), method: :post

