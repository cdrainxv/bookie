- if @profile.avatar.attached? && @profile.cover.attached?
  .profile
    = image_tag @profile.cover, class: 'image img'
    .profile-pic.has-text-centered.box.profile-box
      = image_tag @profile.avatar, class: 'image img img--sm'
      - if current_user == @user
        = link_to 'Edit Profile', 
          edit_profile_path(@user.user_name), 
          class: 'button is-info is-small'
  .section
    - @posts.each do |post|
      = render partial: 'posts/post', locals: {post: post}
