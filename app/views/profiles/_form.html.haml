.small-form.center
  = form_for profile, url: { action: 'update' } do |f|
    .field
      = f.label :avatar, class: 'label'
      = f.file_field :avatar, class: 'input'
    .field
      = f.label :cover, class: 'file-label'
      = f.file_field :cover, class: 'input'
      = f.label :birthdate, class: 'label'
      = f.date_select :birthdate, start_year: Date.current.year - 13, end_year: Date.current.year - 80, default: {month: Date.current.month, day: Date.current.day}
      = f.label :gender, class: 'label'
      = f.text_field :gender, class: 'input'
      = f.label :locale, class: 'label'
      = f.text_field :locale, class: 'input'
      = f.label :bio, class: 'label'
      = f.text_area :bio, class: 'textarea text-box text-box--sm'
    .group--right
      = f.submit 'Save', class: 'button is-info is-medium'
