- if @user == current_user
  = link_to 'Edit Profile', edit_profile_path(@user.user_name)
- if @profile.avatar.attached?
  = image_tag url_for(@profile.avatar.variant(resize: '300x300!').processed.service_url)
- if @profile.cover.attached?
  = image_tag url_for(@profile.cover.variant(resize: '1200x500!').processed.service_url)
- @posts.each do |post|
  = render partial: 'posts/post', locals: {post: post}
