%div
  = link_to post.user.user_name, profile_path(post.user.user_name)
  %h1= post.content
  - if post.user.id == current_user.id
    = link_to 'Delete', 
      post_path(post),
      method: :delete, 
      data: {confirm: 'Are you sure?'}  
    = link_to 'Edit', post_path(post)
  - else
    = link_to 'Like', post_likes_path(post), method: :post 
    = link_to 'Cancel', posts_path
  = render partial: 'shared/comments', locals: { post: post, comments: post.comments }
  = render partial: 'shared/comments_form', 
    locals: { post: post, comments: post.comments.build }
