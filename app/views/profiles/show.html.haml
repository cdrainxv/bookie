- if @profile.avatar.attached? && @profile.cover.attached?
  .profile
    = image_tag @profile.cover, class: 'img'
    .box.profile-box
      = image_tag @profile.avatar, class: 'img--sm'
      - if current_user == @user
        = link_to 'Edit Profile', 
          edit_profile_path(@user.user_name), 
          class: 'button is-info is-small'
  .section
    - if @posts.present?
      - @posts.each do |post|
        = render partial: 'posts/post', locals: {post: post}
    - else 
      %p.title.is-size-3.has-text-centered No activity yet. Please add some posts or friends.
